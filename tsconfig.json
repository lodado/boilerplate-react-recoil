{
    "compilerOptions": {
      "target":"es6",
      "module":"commonjs",
      "moduleResolution": "node",
      "noResolve": false,
      "noImplicitAny": false,
      "removeComments": false,
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "keyofStringsOnly": true,

      "baseUrl": "./frontend/",

      "paths": {
        "@Component/*": ["javascripts/component/*"],
        "@Interface/*": ["javascripts/interface/index.ts"],
        "@Style/*": ["./frontend/stylesheets/*"]
      }
    },
    
    "include": ["frontend/javascripts/**/*"],
    "exclude": ["./node_modules/**/*", "**/*.spec.ts"]
   }